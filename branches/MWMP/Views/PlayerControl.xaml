<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MWMP.PlayerControl"
	x:Name="UserControl"
	d:DesignWidth="499" d:DesignHeight="0">

	<StackPanel x:Name="LayoutRoot" VerticalAlignment="Top">
        <MediaElement x:Name="MediaPlayer" Source="{Binding Source, Mode=OneWay}" LoadedBehavior="Manual" />
		<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
			<Button x:Name="PlayButton" Content="Play" Command="{Binding Play}" />
			<Button x:Name="StopButton" Content="Pause" Command="{Binding Pause}" />
			<Button x:Name="NextButton" Content="Next" Command="{Binding Next}" />
		</StackPanel>
	</StackPanel>
</UserControl>