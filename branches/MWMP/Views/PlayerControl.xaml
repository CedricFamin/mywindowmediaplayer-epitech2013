<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MWMP.PlayerControl"
	x:Name="UserControl"
	d:DesignWidth="499" d:DesignHeight="0">

	<Grid x:Name="LayoutRoot">
		<DockPanel Margin="0,0,0,-314">
			<Button x:Name="PlayButton" Content="Play" Width="75" VerticalAlignment="Top" Command="{Binding Path=Play}" />
			<Button x:Name="StopButton" Content="Pause" Width="75" VerticalAlignment="Top" Command="{Binding Path=Pause}">
				<Button.Background>
					<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
						<GradientStop Color="#FFF3F3F3" Offset="0"/>
						<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
						<GradientStop Color="#FFDDDDDD" Offset="0.5"/>
						<GradientStop Color="#FFCDCDCD" Offset="1"/>
					</LinearGradientBrush>
				</Button.Background>
			</Button>
			<Button x:Name="NextButton" Content="Next" Width="75" VerticalAlignment="Top" Command="{Binding Path=Next}" />
		</DockPanel>
	</Grid>
</UserControl>