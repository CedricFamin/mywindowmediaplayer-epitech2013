<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:MWMP" 
        x:Class="MWMP.MainWindow"
		mc:Ignorable="d"
		Title="MainWindow" MinWidth="500" MinHeight="300">
    <Grid Margin="0,0,0,0" DataContext="{Binding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel>
			<Menu Grid.Row="0" VerticalAlignment="Top" Height="20" DockPanel.Dock="Top">
				<MenuItem Header="Fichier">
					<MenuItem Header="Ouvrir" x:Name="DockPanelOpen" Click="DockPanelOpen_Click"/>
					<MenuItem Header="Fermer"/>
				</MenuItem>
				<MenuItem Header="Aide"/>
			</Menu>
		</DockPanel>
        <TabControl Grid.Row="1">
			<TabItem Header="Player">
				<local:PlayerControl/>
			</TabItem>
			<TabItem Header="Library">
				<local:LibraryUserControl />
			</TabItem>
		</TabControl>
    </Grid>
</Window>
