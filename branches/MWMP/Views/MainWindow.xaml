<Window x:Class="MWMP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Menu VerticalAlignment="Top" Height="20" DockPanel.Dock="Top">
                <MenuItem Header="Fichier">
                    <MenuItem Header="Ouvrir" Name="DockPanelOpen" Click="DockPanelOpen_Click"/>
                    <MenuItem Header="Fermer"/>
                </MenuItem>
                <MenuItem Header="Aide"/>
            </Menu>
        </DockPanel>
        <Button Width="100" Height="50" Margin="10" HorizontalAlignment="Left" Name="Play" Command="{Binding Path=Play}">Play</Button>
        <Button Width="100" Height="50" Margin="120" HorizontalAlignment="Left" Name="Stop" Command="{Binding Path=Stop}">Stop</Button>
    </Grid>
</Window>
