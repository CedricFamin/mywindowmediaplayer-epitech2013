<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:MWMP" x:Class="MWMP.MainWindow"
		mc:Ignorable="d"
		Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Height="89" Margin="0,0,0,0" VerticalAlignment="Top">
        	<DockPanel>
        		<Menu VerticalAlignment="Top" Height="20" DockPanel.Dock="Top">
        			<MenuItem Header="Fichier">
        				<MenuItem Header="Ouvrir" x:Name="DockPanelOpen" Click="DockPanelOpen_Click"/>
        				<MenuItem Header="Fermer"/>
        			</MenuItem>
        			<MenuItem Header="Aide"/>
        		</Menu>
			</DockPanel>
        	<TabControl Margin="0,0,0,0" Height="89">
        		<TabItem Header="Player">
        			<local:PlayerControl/>
        		</TabItem>
        		<TabItem Header="Library">
        			<Grid Background="#FFE5E5E5"/>
        		</TabItem>
        	</TabControl>
        </StackPanel>
    </Grid>
</Window>
