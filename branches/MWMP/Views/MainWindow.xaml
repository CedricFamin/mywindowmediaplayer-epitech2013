<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:MWMP"
        x:Class="MWMP.MainWindow"
		mc:Ignorable="d"
		Title="MainWindow" MinWidth="500" MinHeight="300">
    
    <Window.Resources>
        <ObjectDataProvider MethodName="GetService" ObjectType="{x:Type local:ModuleManager}" x:Key="MenuBarViewModel">
            <ObjectDataProvider.MethodParameters>
                <system:String>MenuBar</system:String>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel DataContext="{Binding Source={StaticResource MenuBarViewModel}}">
			<Menu Grid.Row="0" VerticalAlignment="Top" Height="20" DockPanel.Dock="Top">
				<MenuItem Header="Fichier">
					<MenuItem Header="Ouvrir" x:Name="DockPanelOpen" Command="{Binding Open}"/>
                    <MenuItem Header="Fermer" Command="{Binding Path=Close}"/>
				</MenuItem>
				<MenuItem Header="Aide"/>
			</Menu>
		</DockPanel>
        <TabControl Grid.Row="1">
			<TabItem Header="Player">
				<local:PlayerControl/>
			</TabItem>
			<TabItem Header="Library">
				<local:LibraryUserControl />
			</TabItem>
		</TabControl>
    </Grid>
</Window>
