<Window x:Class="TP1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" BorderBrush="#FFF80D0D" WindowStyle="SingleBorderWindow"> 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="107*" />
            <RowDefinition Height="99*" />
            <RowDefinition Height="105*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="165*" />
            <ColumnDefinition Width="167*" />
            <ColumnDefinition Width="171*" />
        </Grid.ColumnDefinitions>
        <TextBox Margin="43,37,68,42" TextAlignment="Center" Text="{Binding Path=ValueA}"></TextBox>
        <ComboBox Grid.Column="1" Margin="50,65,57,21" ItemsSource="{Binding Path=Operators}" SelectedIndex="0"  Name="operatorSelector">
            
        </ComboBox>
        <TextBox Grid.Column="2" Grid.Row="0" Text="{Binding Path=ValueB}"  Margin="43,37,68,42" TextAlignment="Center"></TextBox>
        <Button Grid.Column="1" Grid.Row="1" Margin="50,27,57,33" Name="equal" Command="{Binding Path=commandEval}" CommandParameter="{Binding ElementName=operatorSelector, Path=SelectedIndex}">=</Button>
        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=Result}"  Margin="43,37,68,42" TextAlignment="Center" Name="Result"></TextBox>
    </Grid>
</Window>
